generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  image     String
  createdAt DateTime  @default(now())
}

model Activity {
  id           Int       @id @default(autoincrement())
  description  String
  type         ActivityType
  createdAt    DateTime  @default(now())
}

enum ActivityType {
  COMMENT
  LIKE
  SHARE
  // Add other types as needed
}
